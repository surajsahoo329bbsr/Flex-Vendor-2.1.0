<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <gradient android:angle="-90" android:endColor="#1DA1F2" android:startColor="#4FC2F8" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4FC2F8" />
            <solid android:color="#1DA1F2" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1DA1F2" />
            <gradient android:angle="-90" android:endColor="#1DA1F2" android:startColor="#1DA1F2" />
        </shape>
    </item>
</selector>